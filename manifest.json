{
    "manifest_version": 2,
    "name": "Slinky",
    "author": "Sam Seabourn",
    "description": "Save and filter through bookmarked webpages with the use hotkeys and hashtags!",
    "version": "0.0.2",
    "browser_action": {
        "default_icon": "icons/icon48.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "24": "icons/icon24.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon123.png",

    },
  
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+B"
            }
        },
        "open-slinky" : {
            "suggested_key": {
                "default" : "Alt+V",
                "windows" : "Alt+V"
            },
            "description" : "Open Slinky Boomarks"
        }       
    },
    "background": {
        "scripts": [
        ],
        "page": "background/background.html",
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "identity"
    ],
    "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com https://apis.google.com; object-src 'self'"
}